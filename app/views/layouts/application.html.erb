          </ul>
          <ul class="nav navbar-nav navbar-right">
             <li><%= link_to 'Teams', root_url %></li>
             <li><%= link_to 'Message Board', root_url %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
